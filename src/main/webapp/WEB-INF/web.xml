<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>AopExample</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <!-- Root context configuration -->
  <context-param>
   <param-name>contextConfigLocation</param-name>
   <param-value>classpath:xpadro/spring/mvc/aop/config/root-context.xml</param-value>
  </context-param>
  
  <!-- Loads Spring root context de Spring, which will be the parent context -->
  <listener>
   <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  </listener>
  
  <!-- Spring servlet -->
  <servlet>
   <servlet-name>springServlet</servlet-name>
   <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
   <init-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>classpath:xpadro/spring/mvc/aop/config/app-context.xml</param-value>
   </init-param>
  </servlet>
  <servlet-mapping>
   <servlet-name>springServlet</servlet-name>
   <url-pattern>/spring/*</url-pattern>
  </servlet-mapping>
</web-app>